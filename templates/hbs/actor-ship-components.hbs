<section class="tab {{ tab.cssClass }}" data-tab="{{ tab.id }}" data-group="{{ tab.group }}">

    <ol class="inventory-list">
        {{#each components as |component|}}
        <li class="item" data-item-id="{{ component.id }}">
            <div class="item-name">
                <img src="{{ component.img }}" alt="{{ component.name }}" width="24" height="24">
                <h4>{{ component.name }}</h4>
            </div>
            <div class="item-controls">
                <a class="item-control item-edit" title="{{ localize 'DOCUMENT.Update' type="Component" }}"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="{{ localize 'DOCUMENT.Delete' type="Component" }}"><i class="fas fa-trash"></i></a>
            </div>
        </li>
        {{/each}}
    </ol>

</section>
